<div class="d-flex justify-content-center">
  <%= form_for @workspace do |form| %>
    <div class="row">
    <div class="col-md-4">
  <div class="form-inline">
    <%= form.label :Workspace_Name %>
    <%= form.text_field :name,class: 'form-control form-control-sm', placeholder: 'Eg. CMM' %>
  </div>
  <br> 
  <div class="form-inline">
    <%= form.submit "Update", class: "btn btn-primary" %>
    <%= form.submit "Cancel", class: "btn btn-primary" %>
  </div>
  </div>
  </div>
<% end %>