<%= form_with(model: group, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <% if group.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
  <% end %>
 
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
 
  