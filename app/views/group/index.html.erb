<h1>Group</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.each do |group| %>
      <tr>
        <td><%= group.group name %></td>
        <td><%=group.purpose%></td>
        <td><%=group.email%></td>
        <td><%= link_to 'Show', group_path(group) %></td><td></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td><td></td>
        <td><%= link_to 'Destroy', edit_group_path(group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>

<%= link_to 'New group', new_group_path %>
</div>