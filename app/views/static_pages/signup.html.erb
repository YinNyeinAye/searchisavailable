<% provide(:title, "Signup") %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: signup_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>
    
      <%= link_to "Create", 'menu', class: "btn btn-lg btn-primary" %>
     
      <%= link_to "Cancel", 'home', class: "btn btn-lg btn-primary" %>
     
    <% end %>
  </div>
</div> 